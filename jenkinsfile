pipeline {
    agent any
    environment {
        AZURE_CREDENTIALS_ID = 'azure-service-principal'
        RESOURCE_GROUP = 'jenkins17'
        APP_SERVICE_NAME = 'apisarthakkumar17'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Sarthak3117/test.git'
            }
        }

        stage('Setup Python') {
            steps {
                bat '"C:\\Users\\sarth\\AppData\\Local\\Programs\\Python\\Python312\\python.exe" --version'
            }
        }

        stage('Install Dependencies') {
            steps {
                bat '"C:\\Users\\sarth\\AppData\\Local\\Programs\\Python\\Python312\\python.exe" -m pip install --upgrade pip'
                bat '"C:\\Users\\sarth\\AppData\\Local\\Programs\\Python\\Python312\\python.exe" -m pip install -r requirements.txt'
            }
        }

        stage('Package Application') {
            steps {
                bat 'powershell.exe -Command "Compress-Archive -Path * -DestinationPath app.zip -Force"'
            }
        }

        stage('Deploy to Azure') {
            steps {
                withCredentials([azureServicePrincipal(credentialsId: AZURE_CREDENTIALS_ID)]) {
                    bat '''
                        az login --service-principal -u %AZURE_CLIENT_ID% -p %AZURE_CLIENT_SECRET% --tenant %AZURE_TENANT_ID%
                        az webapp deployment source config-zip --resource-group %RESOURCE_GROUP% --name %APP_SERVICE_NAME% --src app.zip
                    '''
                }
            }
        }
    }

    post {
        success {
            echo 'üöÄ Deployment Successful!'
        }
        failure {
            echo '‚ùå Deployment Failed!'
        }
    }
}
